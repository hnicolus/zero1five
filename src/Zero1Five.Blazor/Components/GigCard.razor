@using Zero1Five.Gigs
<MudPaper>
    <div class="single-explore-item">
        <div class="single-explore-img">
            <img src="@Gig.LoadCover()" alt="explore image">
            <div class="single-explore-img-info">
                <MudButton Color="Color.Primary" OnClick="e => Clicked(Gig)"
                           Variant="Variant.Filled">
                    @Gig.CategoryName
                </MudButton>
            </div>
        </div>
        <div class="single-explore-txt bg-theme-2">
            <h2>
                <a OnClick="e => Clicked(Gig)">@Gig.Title</a>
            </h2>
            <p class="explore-rating-price">
                <span class="explore-rating">@Gig.Rating</span>
                <a href="3"> <MudRating MaxValue="5" SelectedValue="3"></MudRating> ratings</a>
                <MudDivider Vertical="true" DividerType="DividerType.Middle"/>
                <MudLink Class="my-2" Underline="Underline.None" href="#">@Gig.CategoryName</MudLink>
            </p>
            <div class="explore-person">
                <div class="row">
                    <div class="col-sm-2">
                        <div class="explore-person-img">
                            <a href="#">
                                <img src="./images/explore/person.png" alt="explore person">
                            </a>
                        </div>
                    </div>
                    <div class="col-sm-10">
                        <p>
                            @Gig.Description
                        </p>
                    </div>
                </div>
            </div>
            <div class="explore-open-close-part">
                <MudGrid Justify="Justify.Center">
                    <MudItem sm="8">
                        <MudButton
                            Color="Color.Primary"
                            Variant="Variant.Filled" OnClick="() => Clicked(Gig)"
                            class="close-btn open-btn">
                            open
                        </MudButton>
                    </MudItem>
                </MudGrid>
            </div>
        </div>
    </div>
</MudPaper>

@code {

    [Parameter]
    public GigDto Gig { get; set; }

    [Parameter]
    public EventCallback<GigDto> OnClicked { get; set; }

    private void Clicked(GigDto gig)
    {
        OnClicked.InvokeAsync(gig);
    }

}